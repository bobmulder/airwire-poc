{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "baseUrl": ".",
    "paths": {
        "@/*": ["*"]
    },
    "include": ["resources/js/**/*"],
    "exclude": [
        "node_modules",
    ]
}
